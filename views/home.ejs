<!DOCTYPE html>
<html lang="en">
<%- include('./partials/header.ejs') %>

<body class="p-4">
  <%- include('./partials/navbar.ejs') %>
  <% const name='Gideon Ngetich' %>
  <div class="my-4">

    <div class="bg-slate-100 grid grid-cols-3 gap-3">
      <% if (blogs.length>0) { %>

      <% blogs.forEach(blog=> { %>


      <div class="bg-slate-200 p-4 rounded-md shadow-md text-center hover:scale-90 duration-200">
        <a href="/blogs/<%= blog._id %>">
          <h1 class="text-2xl">
            <%= blog.title %>
          </h1>
          <p>
            <%= blog.body %>
          </p>
          <%= blog.name %>
          <div class="text-sm py-6"><%= blog.createdAt %></div>

        </a>

      </div>
      <% }) %>

      <% } else { %>

      <p>There are no Blogs</p>

      <%} %>

    </div>
  </div>
</body>

</html>